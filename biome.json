{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["**/node_modules", "**/.next", "**/out", "**/build", "**/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["./components/ui/**"],
		"rules": {
			"recommended": true,
			"style": {
				"recommended": true,
				"noYodaExpression": "error",
				"noNonNullAssertion": "warn",
				"noUselessElse": "error",
				"useForOf": "error",
				"useImportType": "off",
				"noArguments": "error",
				"noVar": "error",
				"useConst": "error"
			},
			"correctness": {
				"recommended": true,
				"noEmptyPattern": "warn",
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "error",
				"noArrayIndexKey": "off"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
